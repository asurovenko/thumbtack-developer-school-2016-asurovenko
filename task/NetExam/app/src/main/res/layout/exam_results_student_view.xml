<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/two"
    android:paddingLeft="@dimen/medium_padding"
    android:paddingRight="@dimen/very_small_padding">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/two">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/two" />

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/two" />

            <TextView
                android:id="@+id/patronymic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/two" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/alert_dialog_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/correct"
                style="@android:style/TextAppearance.Large"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="match_parent"
                android:textColor="@color/colorGreen" />

            <TextView
                android:id="@+id/incorrect"
                style="@android:style/TextAppearance.Large"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="match_parent"
                android:textColor="@color/colorRed" />

            <TextView
                android:id="@+id/no_answer"
                style="@android:style/TextAppearance.Large"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="match_parent"
                android:textColor="@color/colorGray" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>