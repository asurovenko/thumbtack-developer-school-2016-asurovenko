<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/small_padding"
    android:layout_marginRight="@dimen/small_padding"
    android:layout_marginTop="@dimen/one">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/very_small_padding">


        <TextView
            android:id="@+id/exam_title"
            style="@android:style/TextAppearance.Large"
            android:layout_width="@dimen/alert_dialog_text_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="@dimen/exan_result_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/correct"
                style="@android:style/TextAppearance.Large"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="match_parent"
                android:textColor="@color/colorGreen" />

            <TextView
                android:id="@+id/incorrect"
                style="@android:style/TextAppearance.Large"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="match_parent"
                android:textColor="@color/colorRed" />

            <TextView
                android:id="@+id/no_answer"
                style="@android:style/TextAppearance.Large"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="match_parent"
                android:textColor="@color/colorGray" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>